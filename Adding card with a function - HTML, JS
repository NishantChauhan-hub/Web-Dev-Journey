// JS ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

function createcard(title, cname, views, monthsold, duration, thumbnail){
    let html=`<div class="card">
            <img class="image"
                src="${thumbnail}">
                <span class="capsule">${duration}</span>
            <div class="text">
                <p class="info1">${title}</p>
                <div class="info2">${cname} . ${views} views . ${monthsold} months ago</div>
            </div>
        </div>`
    document.querySelector(".container").innerHTML = document.querySelector(".container").innerHTML + html
}
    
createcard("sigma video", "codewithme", 756000, 7, "31:20", "https://i.ytimg.com/vi/mCx5aSEK8YE/hqdefault.jpg?sqp=-oaymwEmCKgBEF5IWvKriqkDGQgBFQAAiEIYAdgBAeIBCggYEAIYBjgBQAE=&rs=AOn4CLB4h3uLYCuzx1GRi4VEg_QRgdPr0w")

