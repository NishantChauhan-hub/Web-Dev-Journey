// JS ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


let html1=`1. Initialising Hacking`;
let html2=`2. Reading your files`;
let html3=`3. Files  password detected`;
let html4=`4. Sending all passwords and personal files to  server`;
let html5=`5. Clearing up`;
async function first() {
    await Dots(html1);
}
async function second() {
    await Dots(html2);
}
async function third() {
    await Dots(html3);
}
async function fourth() {
    await Dots(html4);
}
async function fifth() {
    await Dots(html5);
}

async function Dots(text) {
    const count=Math.floor(Math.random()*6)+2;
    const container=document.querySelector(".container");
    for (let i = 0; i<count ; i++) {
        container.innerHTML=`<div class="text">${text + ".".repeat( (i%3) +1 )}</div>`;
        await new Promise(resolve => setTimeout(resolve, 500));
    }
    await new Promise(resolve => setTimeout(resolve, 200));
}

async function main() {
    await first();
    await second();
    await third();
    await fourth();
    await fifth();
    console.log("Hacking Complete.");
}

main(); 

